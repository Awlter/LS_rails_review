%article.video
  .container
    .row
      .video_large_cover.col-sm-7.col-sm-offset-1
        %img(src="/tmp/#{@video.large_cover_url}")
      .video_info.col-sm-3
        %header
          %h3= @video.title
          %span Rating: 4.5/5.0
        %p= @video.description
        .actions
          %a.btn.btn-primary(href="") Watch Now
          %a.btn.btn-default(href="") + My Queue
%section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for [@video, Review.new], layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-2" do |f|
        = f.select :rating, 5.downto(1).map { |n| [pluralize(n, 'Star'), n]}, { label: "Rate this video" }
        = f.text_area :content, control_col: "col-sm-8", rows: 6, required: true
        %fieldset.col-sm-offset-2
          = f.submit "Submit"
      %header
        %h3 User Reviews (#{@reviews.count})
      %ul
        - @reviews.each do |review|
          %article.review
            %li.row
              .col-sm-2
                %span Rating: #{review.rating} / 5
                %p by <a href="">#{review.user.full_name}</a>
              .col-sm-8
                %p= review.content
